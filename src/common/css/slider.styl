.slider
    float left
    clear left
    width 300px
    background #e7e7e7!important
    height 36px
    //margin-top 5px

.ui-slider-min
    position absolute
    z-index 20
    font-size 16px
    color white
    left 20px
    pointer-events none
    margin-top 9px

.ui-slider-max
    margin-left -40px
    z-index 20
    position absolute
    color white
    font-size 16px
    pointer-events none
    margin-top 9px

.slider-container
    padding-top 5px
    position relative
    display inline-block
    .val
        margin-left 20px
        width 52px
        text-align center
        height 36px
    .unit
        margin 5px