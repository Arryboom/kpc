.ui-slider
    position relative
text-align left

.ui-slider .ui-slider-handle
    position absolute
    z-index 30
    cursor pointer
    -ms-touch-action none
    touch-action none
    margin-top -2px
    border-color #5faded
    height 40px
    width 16px
    background url(root + '/common/images/components/slider_block.png') 0px 0px no-repeat
    &:active
        background url(root + '/common/images/components/slider_block.png') 0px 0px no-repeat
.ui-slider
    .ui-slider-range
        position absolute
        z-index 1
        font-size .7em
        display block
        border 0
        background #5faded
        height 36px
