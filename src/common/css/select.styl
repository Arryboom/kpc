.c-select
    width 200px
    height 40px
    border-bottom 1px solid #dcdcdc
    background #fff

.ui-selectmenu-button
    display inline-block
    height 39px
    line-height 39px
    border-bottom 1px solid #dcdcdc
    color #898989
    padding-left 10px
    outline 0
    background #fff
    cursor pointer
    .ui-icon
        position relative
        display inline-block
        float right
        height 39px
        width 40px
        background #5faded url(root + '/common/images/select-arrow.png') no-repeat 13px 15px 
        text-align center
        .c-icon
            position absolute
            top 15px
            left 13px

.ui-selectmenu-menu
    position absolute
    display none
    background #fff

.ui-selectmenu-open
    display block
    ul
        border 1px solid #e5e5e5
        border-top none
        max-height 415px
        overflow auto

    li 
        line-height 30px
        padding-left 10px
    li:hover
        background #5faded 
        color #fff 
        cursor pointer
    


