.c-btn
    display inline-block
    vertical-align middle
    text-align center
    min-width 85px
    height 38px
    line-height 38px
    cursor pointer
    padding 0 13px
    color #898989
    font-size 12px
    .c-icon
        margin-right 10px
    &:not(.c-btn-disabled):hover
        background-color #148cec
        color #fff

.c-btn-white
    background-color #fff
    box-shadow 1px 1px 1px 0px #ccc

.c-btn-b-white
    background-color #fff
    border 1px solid #e5e5e5

.c-btn-blue
    background-color #148cec
    color #fff


.c-btn-disabled
    background-color #f3f3f3 !important
    cursor not-allowed !important
    color #898989 !important
