.c-btn
    display inline-block
    vertical-align middle
    text-align center
    min-width 85px
    height 38px
    line-height 38px
    cursor pointer
    padding 0 13px
    color #898989
    font-size 12px
    .c-icon
        margin-right 10px
    &:not(.c-btn-disabled):not(.ui-button-disabled):hover
        background-color #148cec
        color #fff
    &.c-icon-loading
        overflow hidden
        text-indent -1000px

.c-btn-white
    background-color #fff
    box-shadow 1px 1px 1px 0px #ccc

.c-btn-b-white
    background-color #fff
    border 1px solid #e5e5e5

.c-btn-blue
    background-color #148cec
    border 1px solid #148cec
    color #fff

.c-btn-b-blue
    background-color #fff
    border 1px solid #148cec
    color #148cec

.c-btn-light-blue
    background-color #5faded
    border 1px solid #5faded
    color #fff

.c-btn-orange
    background-color #ff8a00
    border 1px solid #ff8a00
    color #fff
    &:not(.c-btn-disabled):not(.ui-button-disabled):hover
        background-color #ff8a00
        color #fff

.c-btn-b-orange
    background-color #fff
    border 1px solid #ff8a00
    color #ff8a00
    &:not(.c-btn-disabled):not(.ui-button-disabled):hover
        background-color #ff8a00
        color #fff

.c-btn-disabled
.ui-button-disabled
    background-color #f3f3f3 !important
    border-color #f3f3f3 !important
    cursor not-allowed !important
    color #898989 !important
