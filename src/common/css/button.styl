.c-btn
    display inline-block
    vertical-align middle
    text-align center
    min-width 85px
    height 39px
    line-height 39px
    cursor pointer
    padding 0 13px
    color #898989
    font-size 12px
    .c-icon
        margin-right 10px
    &:hover
        background #5faded
        color #fff

.c-btn-white
    background #fff

.c-btn-b-white
    background #fff
    border 1px solid #e5e5e5
