import Drawer from 'kpc/components/drawer';
import {Button, ButtonGroup} from 'kpc/components/button';

<div>
    <ButtonGroup>
        <Button v-for={{ self.get('showList') }} 
            ev-click={{ self.showDrawer.bind(self, value.key) }}
        >{{ value.value }}</Button>
    </ButtonGroup>

    <Drawer v-model='show'
        title='Drawer Title' 
        ref='__demoTwo' 
        placement={{ self.get('showPosition') }} 
        size='small'
    >
        Drawer Body
    </Drawer>
</div>